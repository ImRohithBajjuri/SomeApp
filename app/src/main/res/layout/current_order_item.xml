<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:id="@+id/currentOrderItemCard"
        android:layout_margin="10dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/currentOrderItemImgCard"
                android:layout_margin="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/currentOrderItemImg"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:text="Name"
                app:layout_constraintStart_toEndOf="@id/currentOrderItemImgCard"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/currentOrderItemName"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:id="@+id/currentOrderItemTime"
                app:layout_constraintStart_toEndOf="@id/currentOrderItemImgCard"
                app:layout_constraintTop_toBottomOf="@id/currentOrderItemName"
                android:layout_margin="20dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:id="@+id/currentOrderItemTotalPrice"
                app:layout_constraintStart_toEndOf="@id/currentOrderItemImgCard"
                app:layout_constraintTop_toBottomOf="@id/currentOrderItemTime"
                android:layout_margin="20dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:id="@+id/currentOrderItemStatus"
                app:layout_constraintStart_toEndOf="@id/currentOrderItemImgCard"
                app:layout_constraintTop_toBottomOf="@id/currentOrderItemTotalPrice"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
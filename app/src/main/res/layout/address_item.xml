<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="10dp"
        android:id="@+id/addressItemCard">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:text="Name"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/addressItemName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="address"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:maxLines="2"
                android:id="@+id/addressItemLaneOne"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="address"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:id="@+id/addressItemLaneTwo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="address"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:id="@+id/addressItemDes"/>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_horiz_30"
            android:layout_gravity="end|top"
            android:padding="20dp"
            android:id="@+id/addressItemOptions"
            android:background="@drawable/round_ripple"
            app:tint="@color/grey" />
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>